<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%-5level] %c{1} [%X{X-Correlation-Id}] - %msg%n" />
        </Console>
        <RollingFile name="RollingFileLogger"
                     fileName="logs/application.log"
                     filePattern="logs/archive/application-%d{yyyy-MM-dd-HH-mm}.log.gz" append="true">
            <PatternLayout>
                <Pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%-5level] %c{1} [%X{X-Correlation-Id}] - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB" />
                <TimeBasedTriggeringPolicy interval="1" />
            </Policies>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>

    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFileLogger" />
        </Root>
    </Loggers>
</Configuration>
